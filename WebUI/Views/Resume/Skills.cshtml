@model Services.Models.SkillLanguageAddModel
@{
    ViewBag.Title = "Skills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" >
    <div class="widget box">
        <div class="widget-header"> <h2><i class="icon-reorder"></i> Навыки</h2> </div>
        <div class="widget-content form-horizontal">
            @*<form method="POST" id="form1" class="form-horizontal">*@
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ResumeManagerId)
                <div class="skill_section">
                    @Html.EditorFor(model => model.Skills)
                </div>
                @*<div class="row">*@
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <p id="addSkill" aria-label="Добавить навык" class="text-info">
                                <span class="glyphicon glyphicon-plus"></span> Добавить навык
                            </p>
                        </div>
                    </div>
                </div>
            @*</form>*@
        </div>
    @*</div>*@
    <div class="widget box">
        <div class="widget-header"> <h2><i class="icon-reorder"></i> Владение языками</h2> </div>
        <div class="widget-content form-horizontal">
            @*<form method="POST" id="form2" class="form-horizontal">*@
            <div class="language_section">
                @Html.EditorFor(model => model.Languages)
            </div>
            @*<div class="row">*@
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <p id="addLanguage" aria-label="Добавить язык" class="text-info">
                            <span class="glyphicon glyphicon-plus"></span> Добавить язык
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        @Html.RouteLink("Назад", new { action = "Certificates", controller = "Resume", managerId = ViewBag.ManagerId }, new { @class = "btn btn-default" })
                        @Html.RouteLink("Вывести резюме", new { action = "Manage", controller = "Resume" }, new { @class = "btn btn-default" })
                        @*<a href="~/Resume/PersonalQualities" class="btn btn-default">Далее</a>*@
                        <input type="submit" class="btn btn-primary" id="sendForm" value="Сохранить" />
                    </div>
                </div>
            @*</div>*@
            @*</form>*@
        </div>
    </div>
</form>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/addingData.js")
    @Scripts.Render("~/Scripts/Views/SkillsAndLanguages.js")
}



