
@{
    ViewBag.Title = "Contacts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="h2 text-center section">Контакты</div>
</div>
<div class="row">
    <form class="form-horizontal" method="POST">
        <div class="form-group">
            <label class="col-md-2 control-label">E-mail*</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="email">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Телефон*</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="phone" />
            </div>
        </div>

        <div class="col-md-10 col-md-offset-2">
            <p id="addContact" aria-label="Добавить контакт" class="text-info">
                <span class="glyphicon glyphicon-plus"></span> Добавить контакт
            </p>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <a href="~/Resume/" class="btn btn-default">Назад</a>
                <a href="~/Resume/Education" class="btn btn-default">Далее</a>
                <button class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/dropdown-input")
    @Scripts.Render("~/Scripts/addingData.js")
}
