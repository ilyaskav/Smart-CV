@model Services.Models.ContactAddModel
@{
    ViewBag.Title = "Contacts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="h2 text-center section">Контакты</div>
</div>
<div class="row">
    <form class="form-horizontal" method="POST">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="col-md-2 control-label">E-mail*</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Телефон*</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.EditorFor(model => model.Contacts)

        <div class="col-md-10 col-md-offset-2">
            <p id="addContact" aria-label="Добавить контакт" class="text-info">
                <span class="glyphicon glyphicon-plus"></span> Добавить контакт
            </p>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                @Html.RouteLink("Назад",  new { action= "PersonalData", controller= "Resume", managerId = ViewBag.ManagerId }, new { @class="btn btn-default"})
                @*<a href="~/Resume/PersonalData" class="btn btn-default">Назад</a>*@
                <a href="~/Resume/Education" class="btn btn-default">Далее</a>
                <button class="btn btn-primary">Сохранить</button>
                <span class="text-success disappearance">@ViewBag.Success</span>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @*@Scripts.Render("~/bundles/dropdown-input")*@
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/addingData.js")
}
