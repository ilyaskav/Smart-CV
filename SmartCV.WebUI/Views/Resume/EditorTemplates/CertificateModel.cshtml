@model SmartCV.Service.Models.CertificateModel
@{
    Layout = null;
}

<div class="certificate gray-bottom-line">
    @Html.HiddenFor(model => model.Id)
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Название*</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label">Город</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-1 delete-line">
            <p class="text-danger remove-certificate">
                <span class="glyphicon glyphicon-remove"></span> Удалить
            </p>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label">Дата окончания*</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datePicker-month", id = "datePicker", data_provide = "datepicker" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
    </div>
</div>