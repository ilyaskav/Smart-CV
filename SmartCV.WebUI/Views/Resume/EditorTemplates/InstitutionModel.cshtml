@model SmartCV.Service.Models.InstitutionModel

@{
    Layout = null;
}

<div class="institution gray-bottom-line">
    @Html.HiddenFor(model=>model.Id)
    @Html.HiddenFor(model=>model.ResumeId)
    <div class="form-group row">
        <label class="col-md-2 col-form-label" for="instName">Уч. заведение*</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id="instName" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label" for="instCity">Город</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", id="instCity" } })
            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label" for="instDepartment">Кафедра</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control", id="instDepartment" } })
            @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-1 delete-line">
            <p class="text-danger remove-institution">
                <span class="glyphicon glyphicon-remove"></span> Удалить
            </p>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label" for="instSpeciality">Специальность*</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Specialty, new { htmlAttributes = new { @class = "form-control", id="instSpeciality" } })
            @Html.ValidationMessageFor(model => model.Specialty, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label" for="instDegree">Степень*</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Degree, new { htmlAttributes = new { @class = "form-control", id="instDegree" } })
            @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label">Период*</label>
        <div class="col-md-9">
            <div class="input-daterange input-group datePicker-month">
                @*<input type="text" class="input-sm form-control" name="start" />*@
                @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })
                <span class="input-group-addon">по</span>
                @*<input type="text" class="input-sm form-control" placeholder="настоящее время" name="end" />*@
                @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control", placeholder = "настоящее время" } })
            </div>
        </div>
    </div>
</div>
